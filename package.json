{
  "name": "insider-sudoku",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint --ext .ts,.vue src",
    "format": "prettier --write \"src/**/*.{ts,vue,js,css,md}\"",
    "test": "vitest",
    "type-check": "vue-tsc --noEmit",
    "check": "npm run lint && npm run type-check && npm run test",
    "prebuild": "npm run lint && npm run type-check",
    "ci": "npm run prebuild && npm run build",
    "docker:build": "docker build -t insider-sudoku .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v && docker rmi insider-sudoku",
    "docker:dev": "docker-compose up -d && npm run docker:logs"
  },
  "dependencies": {
    "vue": "^3.4.21"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitest/ui": "^4.0.16",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.17",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.6.2",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.33",
    "prettier": "^3.7.4",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.6.3",
    "vite": "^5.0.10",
    "vitest": "^4.0.16",
    "vue-tsc": "^2.0.26"
  },
  "lint-staged": {
    "*.{ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{ts,vue,js,css,md}": "prettier --write"
  }
}
